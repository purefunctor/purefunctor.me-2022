{
  "name": "purefunctor.me",
  "version": "3.0.0",
  "description": "My personal portfolio website.",
  "private": true,
  "scripts": {
    "build:html": "node bin/static.js",
    "build:scss": "sass scss/index.scss public/index.css --no-source-map",
    "build:assets": "cp -r assets/* public",
    "build:all": "pnpm build:html && pnpm build:scss && pnpm build:assets",
    "watch:html": "chokidar \"html/**/*.html\" -c 'pnpm build:html'",
    "watch:scss": "sass scss/index.scss public/index.css --watch",
    "watch:all": "concurrently \"pnpm:parcel:serve\" \"pnpm:watch:html\" \"pnpm:watch:scss\"",
    "parcel:build": "parcel build public/index.html",
    "parcel:serve": "parcel serve public/index.html",
    "worker:install": "pnpm --dir worker install",
    "worker:build": "pnpm --dir worker build",
    "build": "pnpm clean && pnpm build:all && pnpm parcel:build",
    "dev": "pnpm clean && pnpm build:all && pnpm watch:all",
    "clean": "rm -rf dist public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "Web"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "@parcel/transformer-image": "2.0.0-rc.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.2.1",
    "http-server": "^0.12.3",
    "nunjucks": "^3.2.3",
    "parcel": "^2.0.0-rc.0",
    "sass": "^1.35.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "glob": "^7.2.0"
  }
}
